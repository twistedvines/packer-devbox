{
  "variables": {
    "memory": "512",
    "cores": "1",
    "ssh_username": "root",
    "primary_username": "hobag",
    "ssh_password": "password",
    "ssh_wait_timeout": "1200s",
    "shutdown_command": "shutdown now -P",
    "headless": "true",
    "vm_name": "arch-linux-devbox-build",
    "memory": "4096",
    "cores": "2"
  },

  "builders": [

    {
      "type": "virtualbox-ovf",
      "boot_command": [],
      "source_path": "./ovf/arch-linux.ovf",
      "vm_name": "{{ user `vm_name` }}",
      "communicator": "ssh",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_wait_timeout": "{{ user `ssh_wait_timeout` }}",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "headless": "{{ user `headless` }}",
      "guest_additions_mode": "disable",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "4096"],
        ["modifyvm", "{{.Name}}", "--cpus", "2"],
        ["modifyvm", "{{.Name}}", "--vram", "92"]
      ]
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "script": "./scripts/system_install.sh"
    },
    {
      "type": "shell",
      "script": "./scripts/setup.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} {{ .Path }} {{ user `primary_username` }}"
    },
    {
      "type": "file",
      "source": "./files/.xinitrc",
      "destination": "/home/{{ user `primary_username` }}/.xinitrc"
    },
    {
      "type": "file",
      "source": "./files/i3-config",
      "destination": "/home/{{ user `primary_username` }}/.config/i3/config"
    },
    {
      "type": "shell",
      "inline": "chown -R {{ user `primary_username` }}: /home/{{ user `primary_username` }}"
    },
    {
      "type": "shell",
      "script": "./scripts/user_install.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} {{ .Path }} {{ user `primary_username` }}"
    },
    {
      "type": "shell",
      "script": "./scripts/tidy_up.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} {{ .Path }} {{ user `primary_username` }}"
    },

    {
      "type": "shell-local",
      "command": "VBoxManage setextradata {{ user `vm_name` }} CustomVideoMode1 2560x1440x24"
    },
    {
      "type": "shell-local",
      "command": "VBoxManage setextradata {{ user `vm_name` }} CustomVideoMode2 1920x1080x24"
    }
  ],

  "post-processors": [
    {
      "type": "compress",
      "compression_level": 4,
      "output": "./build/{{ user `vm_name` }}.tar.gz"
    },
    {
      "type": "vagrant",
      "output": "./build/{{ user `vm_name` }}_{{.Provider}}.box",
      "compression_level": 4,
      "vagrantfile_template": "./Vagrantfile"
    }
  ]
}
